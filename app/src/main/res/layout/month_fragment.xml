<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layoutfive"
        android:layout_margin="4dp"
        android:weightSum="10.7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_weight="4"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:paddingTop="5dp"
            card_view:cardCornerRadius="5dp"
            card_view:contentPadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvlist"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>

                <!-- <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvlist"
                     android:layout_margin="5dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                 </android.support.v7.widget.RecyclerView>-->

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:id="@+id/card_views"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="5dp"
            card_view:contentPadding="5dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:text="Current status"
                    android:textSize="14dp"
                    android:textColor="@android:color/black"
                    android:id="@+id/textVieww"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    />
                <TextView
                    android:id="@+id/view"
                    android:background="#DA4A4F"
                    android:layout_below="@+id/textVieww"
                    android:layout_width="match_parent"
                    android:layout_height="2dp">
                </TextView>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:weightSum="7"
                    android:layout_below="@+id/view"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v4.widget.Space
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <RelativeLayout
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="13dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:id="@+id/tv_bdtk"
                            android:text="BDT 0.00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="13dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:layout_below="@+id/tv_bdtk"
                            android:text="0 Overdue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <android.support.v4.widget.Space
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <RelativeLayout
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="13dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:id="@+id/tv_bdtktwo"
                            android:text="BDT 0.00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="13dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:layout_below="@+id/tv_bdtktwo"
                            android:text="0 Overdue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <android.support.v4.widget.Space
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight=".8"
            android:background="#229183"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

            <TextView
                android:gravity="center"
                android:text="Summary"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:id="@+id/texteww"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                />

            <!-- <LinearLayout
                 android:gravity="center"
                 android:background="#229183"
                 android:id="@+id/line4"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:text="Summary"
                     android:textSize="16dp"
                     android:textColor="@android:color/white"
                     android:id="@+id/textViewww"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
             </LinearLayout>-->
        </RelativeLayout>
        <LinearLayout
            android:background="@android:color/white"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_weight="1.9"
            android:layout_marginTop="5dp"
            android:weightSum="7"
            android:layout_below="@+id/view"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="5dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_margin="1dp"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/costtt"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <TextView
                        android:gravity="center"
                        android:text="Total cost"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                card_view:cardCornerRadius="5dp"
                android:layout_margin="5dp"
                card_view:contentPadding="5dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_margin="1dp"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/costtt"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <TextView
                        android:gravity="center"
                        android:text="All Total Cost "
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="5dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_margin="1dp"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/costtt"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <TextView
                        android:gravity="center"
                        android:text="Total cost"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>



    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/floatingActionMenu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        app:menu_showShadow="true"
        app:menu_openDirection="up"
        app:menu_backgroundColor="@android:color/transparent"
        app:menu_fab_label="@string/floatingMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floatingActionItem1"
            app:fab_label="Photo"
            app:fab_size="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_photo_camera_black_24dp"/>
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floatingActionItem2"
            app:fab_label="Photo"
            app:fab_size="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_photo_camera_black_24dp"/>
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floatingActionItem3"
            app:fab_label="Photo"
            app:fab_size="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_photo_camera_black_24dp"/>
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floatingActionItem4"
            app:fab_label="@string/fab4"
            app:fab_size="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_contact_phone_black_24dp"/>

    </com.github.clans.fab.FloatingActionMenu>



</RelativeLayout>