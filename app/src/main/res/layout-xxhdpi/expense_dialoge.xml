<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/layout_image"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:background="@drawable/imageborder"
                android:src="@drawable/ic_photo_camera_black_24dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/layout_image"
            android:id="@+id/layout_amount"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center|right"
                android:id="@+id/tvAmount"
                android:text="Amount"
                android:textSize="16dp"
                android:layout_marginRight="10dp"
                android:layout_height="40dp"
                android:layout_width="100dp"
                />

            <EditText
                android:layout_toRightOf="@+id/tvAmount"
                android:layout_marginRight="20dp"
                android:layout_height="40dp"
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_discroiption"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/layout_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:id="@+id/tv_discription"
                android:text="Discription"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"

                android:layout_height="40dp"
                android:layout_width="100dp"
                />

            <EditText
                android:layout_toRightOf="@+id/tv_discription"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_height="40dp"
                android:id="@+id/et_discription"
                android:layout_width="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

        </RelativeLayout>



        <TextView
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:drawableLeft="@drawable/calender"
            android:text="Select date"
            android:id="@+id/tv_selectDate"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/layout_discroiption"
            android:layout_width="match_parent"
            android:layout_height="30dp" />


        <TextView
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_selectDate"
            android:textSize="12dp"
            android:layout_height="30dp"
            android:id="@+id/bt_cancel"
            android:layout_width="110dp"
            android:text="cancel"
            android:layout_marginBottom="10dp"
            android:textColor="#004d40" />


        <TextView
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_selectDate"
            android:textSize="12dp"
            android:layout_height="30dp"
            android:id="@+id/bt_save"
            android:layout_width="110dp"
            android:text="save"
            android:layout_marginBottom="10dp"
            android:textColor="#004d40" />



    </RelativeLayout>

</RelativeLayout>